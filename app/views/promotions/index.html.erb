  <div class="container">
  <h1 class="text-center">Good deals nearby and for today</h1>
    <div class="row">
      <div class ="col-xs-12 col-sm-6 col-md-6 text-center">
        <% @promotions.each do |promo| %>
        <div class="card">
            <h2> <%= link_to promo.title, promotion_path(promo)%></h2> <i>proposed by</i> <h3><%= promo.seller.username %> </h3>
              <p><strong> <%= promo.producttype %> </strong></p>
              <p><%= promo.description %></p>
              <div class="badge-container badge-discount badge-green">
              <p><strong>- <%= promo.discount%>%</strong></p>
              </div>
              <div class="badge-container badge-price badge-red"><strong><%= promo.priceperunit %> â‚¬</strong></div>
              <p>valid until : <strong><%= promo.duration %></strong></p>
              <p>Avalaible quantity : <strong><%= promo.remainingquantity %> <%= promo.unit%></strong></p>
        </div>
          <% end %>
      </div>
      <div class ="col-xs-12 col-sm-6 col-md-6 text-center ">
        <div id="map" style="width: 100%; height: 600px;"></div>
 <% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        });
    });
    <% end %>
  <% end %>
      </div>
   </div>
 </div>


