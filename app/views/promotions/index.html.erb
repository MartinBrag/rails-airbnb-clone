<div class="container top">
  <div class="row">
    <div class ="col-xs-12 col-sm-6 col-md-6 text-center">
        <% @promotions.each do |promo| %>
        <div class="card">
            <h2> <%= link_to promo.title, promotion_path(promo)%></h2>
            <i>proposed by</i>
            <h3><%= promo.seller.username %> </h3>
            <div class="seperator"></div>
            <img src="assets/shop.png" alt="seller" class="avatar-bordered">
              <p class="top"><strong> <%= promo.producttype %> </strong></p>
              <p><%= promo.description %></p>
              <div class="badge-container badge-discount badge-green">
              <p><strong>- <%= promo.discount%>%</strong></p>
              </div>
              <div class="badge-container badge-price badge-red"><strong><%= promo.priceperunit %> â‚¬</strong></div>
              <p><i class="fa fa-calendar" aria-hidden="true"></i> valid until : <strong><%= promo.duration %></strong></p>
              <p>Avalaible quantity : <strong><%= promo.remainingquantity %> <%= promo.unit%></strong></p>
        </div>
          <% end %>
      </div>
      <div class ="col-xs-12 col-sm-6 col-md-6 card text-center" style="background-image: linear-gradient(75deg, rgba(184,255,107,0.7) 10%, rgba(148,219,70,0.8) 80%);">
        <h2 class="bottom"><i class="fa fa-search" aria-hidden="true"></i> Find a good deal</h2>
        <div id="map" style="width: 100%; height: 600px;"></div>
 <% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        });
    });
    <% end %>
  <% end %>
      </div>
   </div>
