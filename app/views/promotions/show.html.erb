<div class="text-center">

 <h1><%= @promotion.title %> proposed by: <%= @promotion.seller.username %></h1>

 </div>

  <p><h3>Description</h3></p>
  <ul>
  <li>
  <%= @promotion.producttype %>
  </li>
  <li>
    <%= @promotion.description %>
  </li>
  </ul>


  <div id="map" style="width: 100%; height: 600px;"></div>
  <% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function() {
        markers = handler.addMarkers(<%= raw @promotion_coordinates.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        });
    });
    <% end %>
  <% end %>
  <%= link_to 'Back',promotions_path %>
  <%= link_to 'Edit', edit_promotion_path%>







